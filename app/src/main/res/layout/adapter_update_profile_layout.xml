<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="120dp"
    android:layout_marginStart="15dp"
    android:elevation="0dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#FFE797"
    app:cardCornerRadius="9dp">

    <RelativeLayout
        android:id="@+id/updateProfile_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/img_cross"
            android:layout_width="@dimen/milli_img_width"
            android:layout_height="@dimen/milli_img_height"
            android:layout_alignParentEnd="true"
            android:src="@drawable/close_icon"
            android:tint="@android:color/black" />

        <androidx.cardview.widget.CardView
            android:id="@+id/profileParent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            app:cardCornerRadius="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/dummy_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/dummy_profile" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/dummy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/profileParent"
            android:fontFamily="@font/open_sans_semibold"
            android:letterSpacing="0.02"
            android:text="@string/update_profile"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>