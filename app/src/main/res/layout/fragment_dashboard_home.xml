<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/milli_view_margin"
                android:elevation="@dimen/cardview_elevation"
                app:cardCornerRadius="@dimen/cardview_radius_big">

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/fragment_home_image_slider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/big3_min_height"
                    app:sliderAnimationDuration="600"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="2dp"
                    app:sliderIndicatorSelectedColor="@color/bg_color_accent"
                    app:sliderIndicatorUnselectedColor="@color/bg_color_white"
                    app:sliderScrollTimeInSec="2"
                    app:sliderStartAutoCycle="true" />
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_recyclerview_update_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/big_view_margin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/std_view_margin"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/mini_content_padding">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/milli_view_margin"
                    android:layout_weight="1"
                    android:elevation="@dimen/cardview_elevation"
                    app:cardBackgroundColor="@color/bg_card_color_light_grey"
                    app:cardCornerRadius="@dimen/cardview_radius_std_3">

                    <LinearLayout
                        android:id="@+id/fragment_LL_claim_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/mini_content_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/barlow_condensed_semobold"
                            android:text="@string/claim_quantity"
                            android:textAllCaps="true"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/mini_text_size" />

                        <TextView
                            android:id="@+id/fragment_textview_claim_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/barlow_condensed_semobold"
                            android:textAllCaps="true"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/mini_text_size" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/milli_view_margin"
                    android:layout_weight="1"
                    android:elevation="@dimen/cardview_elevation"
                    app:cardBackgroundColor="@color/bg_card_color_light_grey"
                    app:cardCornerRadius="@dimen/cardview_radius_std_3">

                    <LinearLayout
                        android:id="@+id/fragment_LL_confirm_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/mini_content_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/barlow_condensed_semobold"
                            android:text="@string/confirm_quantity"
                            android:textAllCaps="true"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/mini_text_size" />

                        <TextView
                            android:id="@+id/fragment_textview_confirm_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/barlow_condensed_semobold"
                            android:textAllCaps="true"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/mini_text_size" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/milli_view_margin"
                    android:layout_weight="1"
                    android:elevation="@dimen/cardview_elevation"
                    app:cardBackgroundColor="@color/bg_card_color_light_grey"
                    app:cardCornerRadius="@dimen/cardview_radius_std_3">

                    <LinearLayout
                        android:id="@+id/fragment_LL_failed_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/mini_content_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/barlow_condensed_semobold"
                            android:text="@string/failed_quantity"
                            android:textAllCaps="true"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/mini_text_size" />

                        <TextView
                            android:id="@+id/fragment_textview_failed_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/barlow_condensed_semobold"
                            android:textAllCaps="true"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/mini_text_size" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/std_view_margin"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/mini_content_padding">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/milli_view_margin"
                    android:layout_weight="1"
                    android:elevation="@dimen/cardview_elevation"
                    app:cardBackgroundColor="@color/bg_card_color_light_grey"
                    app:cardCornerRadius="@dimen/cardview_radius_std_3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/mini_content_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/barlow_condensed_semobold"
                            android:text="@string/open_orders"
                            android:textAllCaps="true"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/mini_text_size" />

                        <TextView
                            android:id="@+id/fragment_textview_open_orders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/barlow_condensed_semobold"
                            android:textAllCaps="true"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/mini_text_size" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/milli_view_margin"
                    android:layout_weight="1"
                    android:elevation="@dimen/cardview_elevation"
                    app:cardBackgroundColor="@color/bg_card_color_light_grey"
                    app:cardCornerRadius="@dimen/cardview_radius_std_3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/mini_content_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/barlow_condensed_semobold"
                            android:text="@string/invested_amount"
                            android:textAllCaps="true"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/mini_text_size" />

                        <TextView
                            android:id="@+id/fragment_textview_invested_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/barlow_condensed_semobold"
                            android:textAllCaps="true"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/mini_text_size" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/milli_view_margin"
                    android:layout_weight="1"
                    android:elevation="@dimen/cardview_elevation"
                    app:cardBackgroundColor="@color/bg_card_color_light_grey"
                    app:cardCornerRadius="@dimen/cardview_radius_std_3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/mini_content_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/barlow_condensed_semobold"
                            android:text="@string/pending_amount"
                            android:textAllCaps="true"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/mini_text_size" />

                        <TextView
                            android:id="@+id/fragment_textview_pending_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/barlow_condensed_semobold"
                            android:textAllCaps="true"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/mini_text_size" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/mini_content_padding"
                android:layout_marginVertical="@dimen/mini_view_margin"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="1dp"
                    android:orientation="vertical"
                    android:padding="@dimen/mini_content_padding"
                    app:cardBackgroundColor="@color/bg_card_color_light_grey"
                    app:cardCornerRadius="@dimen/cardview_radius_std_3">

                    <LinearLayout
                        android:id="@+id/ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="?android:dividerHorizontal"
                            android:orientation="horizontal"
                            android:showDividers="middle">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Events : "
                                    android:textColor="@color/textColorBlack"
                                    android:textStyle="bold" />
                            </LinearLayout>


                            <LinearLayout
                                android:padding="8dp"
                                android:id="@+id/fragment_LL_ongoing_events"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/ongoing_events"
                                    android:textColor="@color/textColorBlack"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/fragment_LL_upcoming_events"
                                android:layout_width="wrap_content"
                                android:padding="8dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/upcoming_events"
                                    android:textColor="@color/textColorBlack"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@color/textColorWhite"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/calendar" />

                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_recyclerview_events"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!--<TextView
                    android:id="@+id/nodataTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_marginBottom="@dimen/_40sdp"
                    android:alpha="0.5"
                    android:text="Nothing Updated"
                    android:textColor="@color/blackcolor"
                    android:textSize="@dimen/_15sdp"
                    android:visibility="gone" />-->
            </RelativeLayout>

            <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
                android:id="@+id/fragment_page_indicator_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" />

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>